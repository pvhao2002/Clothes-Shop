@model ClothesShop.Models.slider
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chỉnh sửa slider</h4>
            <p class="card-description"> Chỉnh sửa thông tin slider </p>
            @using (Html.BeginForm("doUpdate", "Slider", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "forms-sample" }))
            {
                @Html.HiddenFor(m => m.slider_id)
                <div class="form-group">
                    <label>Hình ảnh</label>
                    <input type="file" id="img-upload" name="img" class="file-upload-default" required>
                    <div class="input-group col-xs-12">
                        <input type="text" class="form-control file-upload-info" disabled placeholder="Tải ảnh lên">
                        <span class="input-group-append">
                            <button class="file-upload-browse btn btn-gradient-primary" type="button">Tải lên</button>
                        </span>
                    </div>
                    <img src=@Url.Content(Model.slider_img) alt="IMG" style="width: 100px; height: 100px; object-fit: contain" id="img-preview" />
                </div>
                <input type="submit" class="btn btn-gradient-primary me-2" name="add" value="Sửa">
            }
        </div>
    </div>
</div>

<script>
    document.getElementById('img-upload').addEventListener('change', function (event) {
        var file = event.target.files[0];
        var reader = new FileReader();

        reader.onload = function (e) {
            document.getElementById('img-preview').src = e.target.result;
        };

        reader.readAsDataURL(file);
    });
</script>