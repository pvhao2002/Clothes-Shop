@model ClothesShop.Models.policy
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Chỉnh sửa chính sách mua hàng</h4>
            @using (Html.BeginForm("doUpdate", "Policy", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "forms-sample" }))
            {
                @Html.HiddenFor(item => item.policy_id)
                <div class="form-group">
                    <label>Nội dung</label>
                    <textarea id="editor" name="content" class="form-control" rows="10">@Model.policy_content</textarea>
                </div>
                <input type="submit" class="btn btn-gradient-primary me-2" name="add" value="Chỉnh sửa">
            }
        </div>
    </div>
</div>

<script src="~/assets/admin/js/CKEditor.js"></script>