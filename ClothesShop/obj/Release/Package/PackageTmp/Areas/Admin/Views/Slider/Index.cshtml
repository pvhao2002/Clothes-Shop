@model IEnumerable<ClothesShop.Models.slider>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body table-responsive">
            <a href="/Admin/Slider/Add" class="btn btn-primary mb-2">Thêm  slider</a>
            <table class="table table-bordered ">
                <thead>
                    <tr>
                        <th scope="col"> Mã slider </th>
                        <th> Hình ảnh </th>
                        <th> Vị trí </th>
                        <th> # </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope='row'>@item.slider_id</td>
                            <td>
                                <img src=@Url.Content(item.slider_img) alt="IMG" style="width: 100px; height: 100px; object-fit: contain;" />
                            </td>
                            <td class="template-demo">
                                <div class="d-flex justify-content-start align-items-center w-100 h-100">
                                    @if (Model.OrderByDescending(i => i.position).FirstOrDefault().position != item.position)
                                    {
                                        <a href="/Admin/Slider/Down/@item.slider_id" class="btn btn-outline-secondary btn-rounded btn-icon d-flex justify-content-center align-items-center">
                                            <i class="mdi mdi-arrow-down"></i>
                                        </a>
                                    }

                                    <span class="btn btn-square">@item.position</span>
                                    @if (item.position != 1)
                                    {
                                        <a href="/Admin/Slider/Up/@item.slider_id" class="btn btn-outline-secondary btn-rounded btn-icon d-flex justify-content-center align-items-center">
                                            <i class="mdi mdi-arrow-up"></i>
                                        </a>
                                    }
                                </div>
                            </td>
                            <td>
                                <a href='/Admin/Slider/Edit/@item.slider_id' class='btn btn-warning'>Sửa</a>
                                <a href='/Admin/Slider/Delete/@item.slider_id' class='btn btn-outline-danger'>Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


