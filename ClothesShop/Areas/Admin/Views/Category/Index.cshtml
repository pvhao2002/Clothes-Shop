@model IEnumerable<ClothesShop.Models.category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body table-responsive">
            <a href="/Admin/Category/Add" class="btn btn-primary mb-2">Thêm loại sản phẩm</a>
            <table class="table table-bordered ">
                <thead>
                    <tr>
                        <th scope="col"> Mã loại sản phẩm </th>
                        <th> Tên loại </th>
                        <th> Mô tả </th>
                        <th> # </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope='row'>@item.category_id</td>
                            <td>@item.category_name</td>
                            <td>@item.description</td>
                            <td>
                                <a href='/Admin/Category/Edit/@item.category_id' class='btn btn-warning'>Sửa</a>
                                <a href='/Admin/Category/Delete/@item.category_id' class='btn btn-outline-danger'>Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


