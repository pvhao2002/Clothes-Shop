@using PagedList.Mvc
@model PagedList.IPagedList<ClothesShop.Models.comment>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@section css {
    <link rel="stylesheet" href="~/assets/admin/css/pagecss.css">
}
<style>
    .truncate {
        width: 250px;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body table-responsive">
            <table class="table table-bordered ">
                <thead>
                    <tr>
                        <th scope="col"> Mã bình luận </th>
                        <th> Người dùng </th>
                        <th> Tên sản phẩm </th>
                        <th> Nội dung </th>
                        <th> Ngày </th>
                        <th> # </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope='row'>@item.comment_id</td>
                            <td>@item.user.email</td>
                            <td>@item.product.product_name</td>
                            <td>@item.content</td>
                            <td>@item.comment_date</td>
                            <td>
                                <a href='/Admin/Comment/Delete/@item.comment_id' class='btn btn-outline-danger'>Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="mt-2">
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }), new PagedListRenderOptions { Display = PagedListDisplayMode.IfNeeded })
            </div>
        </div>
    </div>
</div>

